<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>S'inscrire</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
    <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-control", placeholder: "Nom complet (PrÃ©nom + Nom)" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Votre email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autofocus: true, autocomplete: "password", class: "form-control", placeholder: "Votre mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "S'incrire", class: "btn btn-primary"%>
  </div>
<% end %>
  </div>
</div>
